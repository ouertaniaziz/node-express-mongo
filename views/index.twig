{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
 
   <div class="container">
<div class="table-wrapper">
<div class="table-title">
<div class="row">
<div class="col-sm-8"><h2>Employee <b>Details</b></h2></div>
<div class="col-sm-4">
<button type="button" class="btn btn-info add-new" onclick="window.location.href = '/event/addForm';" ><i class="fa fa-plus"></i> Add New</button>
</div>
</div>
</div>
<table class="table table-bordered">
<thead>
<tr>
<th>Name</th>
<th>Department</th>
<th>Phone</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
{% for event in events %}
<tr>
<td>{{event.title}}</td>
<td>{{event.Description}}</td>
<td>{{event.NbParticipant}}</td>
<td>
  <a class="edit" title="Edit" data-toggle="tooltip" href="/event/updateForm/{{ event._id }}"><i class="material-icons">&#xE254;</i></a>
<a class="delete" id="deletevent" title="Delete" data-toggle="tooltip" href="#" onclick="event.preventDefault(); deleteEvent('{{event._id}}');"><i class="material-icons">&#xE872;</i></a>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
{% endblock %}
